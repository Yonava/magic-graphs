{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "rootDir": "src",
    "baseUrl": ".",
    "noEmit": false,
    "composite": true,
    "types": ["vite/client"],
    "paths": {
      "@magic/graph/*": ["../graph/src/*"],
      "@magic/ui/*": ["../ui/src/*"],
      "@magic/canvas/*": ["../canvas/src/*"],
      "@magic/shapes/*": ["../shapes/src/*"]
    }
  },
  "references": [
    {
      "path": "../graph"
    },
    {
      "path": "../ui"
    },
    {
      "path": "../canvas"
    },
    {
      "path": "../shapes"
    }
  ],
  "include": ["src"]
}
