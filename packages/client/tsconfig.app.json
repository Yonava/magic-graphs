{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "references": [
    { "path": "../ui" },
    { "path": "../graph" },
    { "path": "../products" },
    { "path": "../canvas" },
    { "path": "../utils" },
    { "path": "../shapes" }
  ],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],

    "baseUrl": ".",
    "paths": {
      "@magic/ui/*": ["../ui/src/*"],
      "@magic/graph/*": ["../graph/src/*"],
      "@magic/products/*": ["../products/src/*"],
      "@magic/canvas/*": ["../canvas/src/*"],
      "@magic/utils/*": ["../utils/src/*"],
      "@magic/shapes/*": ["../shapes/src/*"]
    }
  }
}
