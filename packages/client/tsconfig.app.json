{
  "extends": ["../../tsconfig.base.json", "@vue/tsconfig/tsconfig.dom.json"],
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "references": [
    { "path": "../ui" },
    { "path": "../graph" },
    { "path": "../products" },
    { "path": "../canvas" },
    { "path": "../utils" },
    { "path": "../shapes" }
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@magic/ui/*": ["../ui/src/*"],
      "@magic/graph/*": ["../graph/src/*"],
      "@magic/products/*": ["../products/src/*"],
      "@magic/canvas/*": ["../canvas/src/*"],
      "@magic/utils/*": ["../utils/src/*"],
      "@magic/shapes/*": ["../shapes/src/*"]
    }
  }
}
