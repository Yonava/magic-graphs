{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "references": [
    { "path": "../ui" },
    { "path": "../graph" },
    { "path": "../products" },
    { "path": "../canvas" },
    { "path": "../utils" },
    { "path": "../shapes" }
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "paths": {
      "@magic/ui/*": ["../ui/src/*"],
      "@magic/graph/*": ["../graph/src/*"],
      "@magic/products/*": ["../products/src/*"],
      "@magic/canvas/*": ["../canvas/src/*"],
      "@magic/utils/*": ["../utils/src/*"],
      "@magic/shapes/*": ["../shapes/src/*"]
    }
  }
}
