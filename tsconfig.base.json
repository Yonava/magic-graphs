{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2023", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /* Build settings */
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,

    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "@magic/products/*": ["./packages/products/src/*"],
      "@magic/canvas/*": ["./packages/canvas/src/*"],
      "@magic/graph/*": ["./packages/graph/src/*"],
      "@magic/utils/*": ["./packages/utils/src/*"],
      "@magic/client/*": ["./packages/client/src/*"],
      "@magic/storybook/*": ["./packages/storybook/src/*"],
      "@magic/server/*": ["./packages/server/src/*"],
      "@magic/ui/*": ["./packages/ui/src/*"],
      "@magic/shapes/*": ["./packages/shapes/src/*"]
    }
  },
  "include": ["types"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
