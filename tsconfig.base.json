{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2023", "DOM"],
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,

    /* Build settings */
    "composite": true,
    "declaration": true,
    "declarationMap": true,

    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
