{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "client/src/**/*", "client/src/**/*.vue"],
  "exclude": ["client/src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@utils/*": ["client/src/utils/*"],
      "@colors": ["client/src/utils/colors.ts"],
      "@shapes": ["client/src/shapes/index.ts"],

      "@graph/*": ["client/src/graphs/*"],
      "@shape/*": ["client/src/shapes/*"],
      "@product/*": ["client/src/products/*"],
      "@playground/*": ["client/src/playground/*"],
    }
  }
}
